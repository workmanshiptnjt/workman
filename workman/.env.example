# Application Environment Variables
# Copy this file to .env.local and update with your values

# ============================================
# Application Settings
# ============================================
NEXT_PUBLIC_APP_NAME=Workmanship
NEXT_PUBLIC_APP_DESCRIPTION=Grow Your Faith Daily

# ============================================
# Domain Configuration
# ============================================
# For local development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# For production (update with your actual domain)
# NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# ============================================
# API Configuration
# ============================================
# Your API endpoints (if you add backend later)
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ============================================
# Analytics (Optional)
# ============================================
# Google Analytics ID
# NEXT_PUBLIC_GA_ID=

# ============================================
# Third-party Services
# ============================================
# App Store Links
NEXT_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/workmanship
NEXT_PUBLIC_GOOGLE_PLAY_URL=https://play.google.com/store/apps/details?id=com.workmanship

# ============================================
# SEO & Social
# ============================================
NEXT_PUBLIC_OG_IMAGE=https://yourdomain.com/og-image.png
NEXT_PUBLIC_TWITTER_HANDLE=@WorkmanshipApp
NEXT_PUBLIC_CREATOR_EMAIL=contact@workmanship.com

# ============================================
# Feature Flags
# ============================================
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_BLOG=false
